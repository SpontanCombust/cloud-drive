<Window x:Class="CloudDrive.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudDrive.App"
        mc:Ignorable="d"
        Title="Konfiguracja" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Adres URL serwera:" />
            <TextBox Name="ServerUrlTextBox" Width="250" Height="25"/>

            <Label Content="Ścieżka folderu:" />
            <TextBox Name="FolderPathTextBox" Width="250" Height="25"/>

            <UniformGrid Grid.Row="2" Columns="1" Margin="0,15,0,0" Height="80">
                <Button Content="Wybierz folder" Width="180" Height="30" Click="Folder_Click"/>
                <Button Content="Zapisz ustawienia" Width="180" Height="30" Click="SaveSettingsButton_Click" Margin="0,10,0,0" />
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
