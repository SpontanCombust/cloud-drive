<Window x:Class="CloudDrive.App.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudDrive.App"
        mc:Ignorable="d"
        Title="Logowanie/Rejestracja" Height="350" Width="450">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Adres email:" />
            <TextBox Name="EmailTextBox" Width="250" Height="25"/>

            <Label Content="Hasło:" />
            <PasswordBox Name="PasswordBox" Width="250" Height="25"/>

            <UniformGrid Grid.Row="3" Columns="2" Margin="0,15,0,0" Height="30">
                <Button x:Name="RegisterButton" Content="Zarejestruj" Click="RegisterButton_Click" Width="180"/>
                <Button x:Name="LoginButton" Content="Zaloguj" Click="LoginButton_Click" Width="180"/>
            </UniformGrid>
            <TextBlock Name="StatusTextBlock" Grid.Row="2" Foreground="Red" Margin="0,10,0,0"/>
            <Button Content="Powrót do ustawień" Width="180" Height="30" Click="BackToSettingsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
