<Window x:Class="CloudDrive.App.Views.FileHistory.FileHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudDrive.App.Views.FileHistory"
        mc:Ignorable="d"
        Title="CloudDrive - historia plików" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="55*"/>
        </Grid.ColumnDefinitions>

        <!-- File Tree View -->
        <TreeView x:Name="FileIndexTreeView" Grid.Column="0">
            <TreeView.Resources>
                <!-- Template for all file items -->
                <HierarchicalDataTemplate DataType="{x:Type local:FileIndexTreeItemViewModel}" 
                                        ItemsSource="{Binding Subindices}">
                    <TextBlock Text="{Binding FileName}"/>
                </HierarchicalDataTemplate>
            </TreeView.Resources>

            <!-- Active Files Branch -->
            <TreeViewItem ItemsSource="{Binding Active}" IsExpanded="True">
                <TreeViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Pliki" FontWeight="Bold"/>
                    </DataTemplate>
                </TreeViewItem.HeaderTemplate>
            </TreeViewItem>

            <!-- Spacing -->
            <Rectangle Height="0" Margin="0,5,0,5"/>

            <!-- Archived Files Branch -->
            <TreeViewItem ItemsSource="{Binding Archived}">
                <TreeViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Archiwum" FontWeight="Bold" Foreground="Gray"/>
                    </DataTemplate>
                </TreeViewItem.HeaderTemplate>
            </TreeViewItem>
        </TreeView>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

        <!-- File Versions List -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <ListView x:Name="FileVersionListView" 
                      Grid.Row="0"
                      ItemsSource="{Binding FileVersions}"
                      SelectedItem="{Binding SelectedFileVersion}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Wersja" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding VersionNr}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Ścieżka" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ClientPath}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Rozmiar (B)" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SizeBytes}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Data utworzenia" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CreatedDate}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="MD5" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Md5}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Grid.Row="1" 
                    Content="Przywróć wersję" 
                    Click="OnApplyVersionClick"
                    
                    Margin="10"
                    Padding="20,5"
                    HorizontalAlignment="Right"/>
        </Grid>
        
    </Grid>
</Window>