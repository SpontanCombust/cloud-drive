<Window x:Class="CloudDrive.App.Views.FileHistory.FileHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudDrive.App.Views.FileHistory"
        mc:Ignorable="d"
        Title="CloudDrive - historia plików" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>

        <!-- File Tree View -->
        <TreeView x:Name="FileIndexTreeView" Grid.Column="0">
            <TreeView.Resources>
                <!-- Template for all file items -->
                <HierarchicalDataTemplate DataType="{x:Type local:FileIndexTreeItemViewModel}" 
                                        ItemsSource="{Binding Subindices}">
                    <TextBlock Text="{Binding FileName}"/>
                </HierarchicalDataTemplate>
            </TreeView.Resources>

            <!-- Active Files Branch -->
            <TreeViewItem ItemsSource="{Binding Active}" IsExpanded="True">
                <TreeViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Pliki" FontWeight="Bold"/>
                    </DataTemplate>
                </TreeViewItem.HeaderTemplate>
            </TreeViewItem>

            <!-- Spacing -->
            <Rectangle Height="0" Margin="0,5,0,5"/>

            <!-- Archived Files Branch -->
            <TreeViewItem ItemsSource="{Binding Archived}">
                <TreeViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Archiwum" FontWeight="Bold" Foreground="Gray"/>
                    </DataTemplate>
                </TreeViewItem.HeaderTemplate>
            </TreeViewItem>
        </TreeView>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

        <!-- File Versions List -->
        <ListView x:Name="FileVersionListView" Grid.Column="2"/>
    </Grid>
</Window>