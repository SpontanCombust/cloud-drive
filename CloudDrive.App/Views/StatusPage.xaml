<Page x:Class="CloudDrive.App.Views.StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CloudDrive.App.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatusPage" Height="350" Width="450">

    <Grid Background="#FAFAFA">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="350">

            <Label Content="Logi synchronizacji:"/>
            <TextBox x:Name="LogTextBox" Width="350" Height="160" Margin="0,0,0,20" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
            <Button x:Name="FullSyncButton" Content="Pełna synchronizacja" Width="250" Height="30" Click="FullSyncButton_Click"/>
            <Button x:Name="logout" Content="Wylogowanie" Margin="0,20,0,0"  Width="250" Height="30" Click="logout_Click" />
            <Button x:Name="clear" Content="Wyczyszczenie logów" Margin="0,20,0,0"  Width="250" Height="30" Click="clear_Click" />
        </StackPanel>
      
    </Grid>
</Page>
