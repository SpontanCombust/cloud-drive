<Window x:Class="CloudDrive.App.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudDrive.App"
        mc:Ignorable="d"
        Title="Logowanie/Rejestracja" Height="350" Width="450">
	<Grid Background="#FAFAFA">
		<StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
			<Label Content="Adres e-mail:"/>
			<TextBox Name="EmailTextBox" Width="250" Height="30" Margin="0,0,0,10" VerticalContentAlignment="Center"
				 HorizontalContentAlignment="Left"/>

			<Label Content="Hasło:"/>
			<PasswordBox Name="PasswordBox" Width="250" Height="30" Margin="0,0,0,20" VerticalContentAlignment="Center"
				 HorizontalContentAlignment="Left"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
				<Button Content="Zarejestruj" Click="RegisterButton_Click" Width="120" Margin="5,0"/>
				<Button Content="Zaloguj" Click="LoginButton_Click" Width="120" Margin="5,0"/>
			</StackPanel>

            <Button Content="Powrót do ustawień" Click="BackToSettingsButton_Click" Width="250" Height="30" Margin="0,0,0,10"/>

            <StackPanel Orientation="Vertical" Width="250">
                <TextBlock Name="StatusTextBlock" Foreground="Red" TextAlignment="Center" FontWeight="Bold" MinHeight="30" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>
	</Grid>
</Window>
